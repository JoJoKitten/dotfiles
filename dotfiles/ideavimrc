let mapleader = " "

set relativenumber
set scrolloff=10

" case insensitive search except when using capital letters
set ignorecase
set smartcase
set hlsearch

" timeouts
set timeout timeoutlen=300 ttimeout ttimeoutlen=200

" smart join
set ideajoin

set nonumber

" emulated vim plugins
set easymotion
set surround
set commentary

" nmap s <Plug>(easymotion-bd-s)


"-------------------- Mappings -----------------------------
imap jk <Esc>
imap kj <Esc>
map Y y$
inoremap jj <esc>o
inoremap hh <backspace>

" alternative bindings for search
nnoremap + /
nnoremap - ?

" allows incsearch highlighting for range commands
nnoremap äd :t''<CR>
nnoremap äm :m''<CR>

" . on all selected lines
vnoremap . :normal .<cr>
" execute tag t on all selected lines
vnoremap @ :normal @t<cr>

nnoremap <leader>l :nohl<cr>
nnoremap <M-l> :nohl<cr>

" files
nnoremap <leader>fs :w<cr>
nnoremap <leader>fq :wq<cr>

" split
nnoremap <leader>sv :vs<cr>
nnoremap <leader>sh :sp<cr>

" java
inoremap ör private<space>
inoremap öv void<space>
inoremap öi int<space>
inoremap öd double<space>
inoremap ös String<space>
inoremap öl long<space>
inoremap ön null
inoremap är return<space>


inoremap ötr private static<space>
inoremap ötu public static<space>
inoremap öfr private static final<space>
inoremap öfu public static final<space>
