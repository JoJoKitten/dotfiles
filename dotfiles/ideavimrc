set surround
set multiple-cursors

" nnoremap yy "+yy
" vnoremap y "+y
" nnoremap p "+p
" nnoremap P "+P
" set clipboard=unnamedplus

let mapleader = " "

set relativenumber
set scrolloff=10

" Completion
set wildmenu
set wildmode=longest,list,full

" case insensitive search except when using capital letters
set ignorecase
set smartcase
set hlsearch

" timeouts
set timeout timeoutlen=300 ttimeout ttimeoutlen=200



"-------------------- Mappings -----------------------------
imap jk <Esc>
map Y y$
inoremap jj <esc>o
inoremap hh <backspace>

inoremap öw while (
inoremap öi if (
inoremap öa <Esc>0f)i,<space>

inoremap äu public<space>
inoremap är private<space>
inoremap ääu public static<space>
inoremap äär private static<space>
inoremap äv void<space>
inoremap äi int<space>
inoremap äd double<space>
inoremap äs String<space>
inoremap äl long<space>
inoremap än null

nnoremap <leader>fs :w<cr>
nnoremap <leader>fq :wq<cr>

" split
nnoremap <leader>sv :vs<cr>
nnoremap <leader>sh :sp<cr>

" too lazy to press Ctrl :)
map <M-u> <C-u>
map <M-d> <C-d>
map <M-o> <C-o>
map <M-i> <C-i>

