# Execute some other tasks that depend on the machine
exec ~/.i3/start_jobs.sh

# Start a dropdown terminal
exec --no-startup-id $terminal --name=dropdown -e tmux
for_window [instance="dropdown"] floating enable;
for_window [instance="dropdown"] move scratchpad; \
    [instance="dropdown"] scratchpad show; move position 0px 30px; \
    resize set 100ppt 40ppt; move scratchpad
# show dropdown terminal
bindsym $mod+t [instance="dropdown"] scratchpad show
# start a new dropdown terminal
bindsym $mod+Shift+t exec --no-startup-id $terminal --name=dropdown -e tmux


# swap two containers
bindsym $mod+Shift+s mark --add _swap
bindsym $mod+s swap container with mark _swap


# type something
# bindsym --release $mod+Control+p exec --no-startup-id xdotool type --clearmodifiers "..."

# simulate right mouse down to enable grabbing with touchpad
bindsym $mod+Ctrl+r --release exec xdotool mousedown 3

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% 
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% 
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
bindsym Shift+XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle

# Media player controls
# bindsym XF86AudioPlay exec playerctl play-pause
# bindsym XF86AudioPause exec playerctl pause
# bindsym XF86AudioNext exec playerctl next
# bindsym XF86AudioPrev exec playerctl previous

# Instead of playerctl, control Amazon Music in Firefox
bindsym XF86AudioPlay  exec xdotool search --name "Amazon.*Firefox" key space
bindsym XF86AudioPause exec xdotool search --name "Amazon.*Firefox" key space
bindsym XF86AudioNext  exec xdotool search --name "Amazon.*Firefox" key Right
bindsym XF86AudioPrev  exec xdotool search --name "Amazon.*Firefox" key Left
# Show currently played title
bindsym Shift+XF86AudioPlay  exec xdotool search --name "Amazon.*Firefox" getwindowname | sed 's/\(.*\)bei Amazon.*/"\1"/' | xargs notify-send


# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 


# bind apps to workspaces
assign [class="(?i)virtualbox"] 9

# window colors
set $active-border       #a0b0b0
set $inactive-border     #303030
set $bg-color 	         #303030
set $inactive-bg-color   #002020
set $text-color          #ffffff
set $inactive-text-color #707070
set $urgent-bg-color     #205040
set $indicator-color     #908020
#                       border              background         text                 indicator
client.focused          $active-border      $active-border     $text-color          $indicator-color
client.unfocused        $inactive-border    $inactive-border   $inactive-text-color $inactive-border
client.focused_inactive $inactive-border    $inactive-bg-color $inactive-text-color $inactive-border
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $urgen-bg-color


# start polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

##################################################
############### For i3-gaps ######################
##################################################

# Set inner/outer gaps
gaps inner 20
gaps outer 0

# No gaps and borders when there only is one container
smart_gaps on
smart_borders on

# Change gaps on current workspace
bindsym $mod+plus gaps inner current plus 10
bindsym $mod+minus gaps inner current minus 10
bindsym $mod+Shift+plus gaps outer current plus 10
bindsym $mod+Shift+minus gaps outer current minus 10

# Change gaps on all workspaces
bindsym $mod+Ctrl+plus gaps inner all plus 10
bindsym $mod+Ctrl+minus gaps inner all minus 10
bindsym $mod+Ctrl+Shift+plus gaps outer all plus 10
bindsym $mod+Ctrl+Shift+minus gaps outer all minus 10


##################################################
############### general purpose menu #############
##################################################

bindsym $mod+space mode "$menu"

################# root menu ######################
set $menu (l)auncher | (d)otfiles | (c)nee | (k)eyborrd layout | (t)ools | (Shift+e)xit
mode "$menu" {
    bindsym l mode "$menu_launcher"
    bindsym c mode "$menu_cnee"
    bindsym d mode "$menu_dotfiles"
    bindsym k mode "$menu_keyboard"
    bindsym t mode "$menu_tools"
    bindsym Shift+e mode "$menu_exit"
    bindsym q mode "default"
    bindsym Escape mode "default"
}

############# application launcher ###############
set $menu_launcher (f)irefox | (e)macs | (r)anger | neo(m)utt | pcma(n)fm | (t)hunderbird |\
 (p)ianoteq | (a)mazon music 
mode "$menu_launcher" {
    bindsym f exec firefox, mode "default"
    bindsym e exec emacs, mode "default"
    bindsym r exec $terminal --name=ranger -e ranger, mode "default"
    bindsym m exec $terminal --name=neomutt -e neomutt, mode "default"
    bindsym n exec pcmanfm, mode "default"
    bindsym t exec thunderbird, mode "default"
    bindsym p mode "default", exec \
      pactl set-sink-volume 1 85% \
      && ~/Applications/Pianoteq_6_STAGE/amd64/Pianoteq\ 6\ STAGE \
      && pactl set-sink-volume 1 30%
    bindsym a exec firefox --new-window https://music.amazon.de/my/albums, mode "default"
    bindsym q mode "default"
    bindsym Escape mode "default"
}

################### cnee #########################
set $menu_cnee (r)ecord | (p)lay
mode "$menu_cnee" {
    bindsym r exec ~/scripts/cnee_record.sh, mode "default"
    bindsym p exec ~/scripts/cnee_replay.sh, mode "default"
    bindsym q mode "default"
    bindsym Escape mode "default"
}

################### dotfiles #####################
set $menu_dotfiles (p)ull | (i)nstall | (c)ommit and push
mode "$menu_dotfiles" {
    bindsym p exec $terminal -e ~/dotfiles/pull.sh, mode "default"
    bindsym i exec "~/dotfiles/dotdrop.sh install -f && i3-msg restart", mode "default"
    bindsym c exec $terminal -e ~/dotfiles/push.sh, mode "default"
    bindsym q mode "default"
    bindsym Escape mode "default"
}

############# keyboard layout ####################
set $menu_keyboard (d)e | (n)eo | (m)y neo
mode "$menu_keyboard" {
    bindsym d exec --no-startup-id "setxkbmap de && xset r 51", mode "default"
    bindsym n exec --no-startup-id setxkbmap de neo, mode "default"
    bindsym m exec --no-startup-id "setxkbmap lv && xmodmap ~/my_neo_de.xmodmap && xset -r 51", mode "default"
    bindsym q mode "default"
    bindsym Escape mode "default"
}

##################### tools ######################
set $menu_tools (e)mojis
mode "$menu_tools" {
    bindsym e exec --no-startup-id ~/scripts/dmenu_emojis.sh, mode "default"
    bindsym q mode "default"
    bindsym Escape mode "default"
}

############## exit, shutdown etc. ###############
set $menu_exit (l)ock | log(o)ut | (s)hutdown | (h)ibernate | (r)eboot | sus(p)end
mode "$menu_exit" {
    bindsym l exec --no-startup-id blurlock, mode "default"
    bindsym p exec --no-startup-id systemctl suspend, mode "default"
    bindsym o exec --no-startup-id i3-msg exit, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff, mode "default"
    bindsym q mode "default"
    bindsym Escape mode "default"
}


##################################################
############### mouse control ####################
##################################################

bindsym $mod+m mode "$mouse"

set $mouse Mouse mode
mode "$mouse" {
    # mouse click left, middle, right
    bindsym space exec xdotool click 1, mode "default"
    bindsym f exec xdotool click 1
    bindsym d exec xdotool click 2
    bindsym s exec xdotool click 3

    # mouse click with control
    bindsym control+f --release exec xdotool keydown control click 1 keyup control
    bindsym control+d --release exec xdotool keydown control click 2 keyup control
    bindsym control+s --release exec xdotool keydown control click 3 keyup control

    # mouse click with shift
    bindsym shift+f --release exec xdotool keydown shift click 1  keyup shift
    bindsym shift+d --release exec xdotool keydown shift click 2  keyup shift
    bindsym shift+s --release exec xdotool keydown shift click 3  keyup shift

    # mouse click with control and shift
    bindsym shift+control+f --release exec xdotool keydown shift keydown control click 1  keyup shift keyup control
    bindsym shift+control+d --release exec xdotool keydown shift keydown control click 2  keyup shift keyup control
    bindsym shift+control+s --release exec xdotool keydown shift keydown control click 3  keyup shift keyup control

    #grab with left button
    bindsym g exec xdotool mousedown 1
    bindsym control+g exec xdotool keydown control mousedown 1
    bindsym shift+g exec xdotool keydown shift mousedown 1
    bindsym t exec xdotool mouseup 1 keyup control keyup shift

    #grab with right button
    bindsym r exec xdotool mousedown 3
    bindsym control+r exec xdotool keydown control mousedown 3
    bindsym shift+r exec xdotool keydown shift mousedown 3
    bindsym e exec xdotool mouseup 3 keyup control keyup shift

    # scroll
    bindsym plus exec xdotool click 4
    bindsym minus exec xdotool click 5

    # movement
    bindsym u      exec xdotool mousemove_relative -- -20 -12
    bindsym i      exec xdotool mousemove_relative --   0 -12
    bindsym o      exec xdotool mousemove_relative --  20 -12
    bindsym j      exec xdotool mousemove_relative -- -20   0
    bindsym l      exec xdotool mousemove_relative --  20   0
    bindsym m      exec xdotool mousemove_relative -- -20  12
    bindsym n      exec xdotool mousemove_relative -- -20  12
    bindsym comma  exec xdotool mousemove_relative --   0  12
    bindsym period exec xdotool mousemove_relative --  20  12

    bindsym Mod1+u      exec xdotool mousemove_relative -- -100 -60
    bindsym Mod1+i      exec xdotool mousemove_relative --    0 -60
    bindsym Mod1+o      exec xdotool mousemove_relative --  100 -60
    bindsym Mod1+j      exec xdotool mousemove_relative -- -100   0
    bindsym Mod1+l      exec xdotool mousemove_relative --  100   0
    bindsym Mod1+m      exec xdotool mousemove_relative -- -100  60
    bindsym Mod1+n      exec xdotool mousemove_relative -- -100  60
    bindsym Mod1+comma  exec xdotool mousemove_relative --    0  60
    bindsym Mod1+period exec xdotool mousemove_relative --  100  60

    bindsym Mod1+Shift+u      exec xdotool mousemove_relative -- -300 -180
    bindsym Mod1+Shift+i      exec xdotool mousemove_relative --    0 -180
    bindsym Mod1+Shift+o      exec xdotool mousemove_relative --  300 -180
    bindsym Mod1+Shift+j      exec xdotool mousemove_relative -- -300   0
    bindsym Mod1+Shift+l      exec xdotool mousemove_relative --  300   0
    bindsym Mod1+Shift+m      exec xdotool mousemove_relative -- -300  180
    bindsym Mod1+Shift+n      exec xdotool mousemove_relative -- -300  180
    bindsym Mod1+Shift+comma  exec xdotool mousemove_relative --    0  180
    bindsym Mod1+Shift+period exec xdotool mousemove_relative --  300  180

    bindsym control+u      exec xdotool mousemove_relative -- -3 -3
    bindsym control+i      exec xdotool mousemove_relative --   0 -3
    bindsym control+o      exec xdotool mousemove_relative --  3 -3
    bindsym control+j      exec xdotool mousemove_relative -- -3   2
    bindsym control+l      exec xdotool mousemove_relative --  3   2
    bindsym control+m      exec xdotool mousemove_relative -- -3  3
    bindsym control+n      exec xdotool mousemove_relative -- -3  3
    bindsym control+comma  exec xdotool mousemove_relative --   0  3
    bindsym control+period exec xdotool mousemove_relative --  3  3

    bindsym $mod+comma exec ~/scripts/start_grid_nav.sh, mode "default"

    bindsym $mod+m mode "default"
    bindsym q mode "default"
    bindsym Escape mode "default"
}
# grid navigation
bindsym $mod+comma exec ~/scripts/start_grid_nav.sh