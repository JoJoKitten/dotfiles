# Set shut down, restart and locking features
bindsym $mod+Shift+Delete mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Resize window
bindsym $mod+Left resize shrink width 40 px or 5 ppt
bindsym $mod+Up resize grow height 40 px or 5 ppt
bindsym $mod+Down resize shrink height 40 px or 5 ppt
bindsym $mod+Right resize grow width 40 px or 5 ppt

# launcher mode
set $mode_launcher (f) Firefox, (s) Spacemacs, (r) ranger, (n) pcmanfm, (t) Thunderbird,\
 (p) Pianoteq, (m) mocp, (b) bmenu

bindsym $mod+x mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f mode "default", exec firefox
    bindsym s mode "default", exec emacs
    bindsym r mode "default", exec urxvt -e ranger
    bindsym n mode "default", exec pcmanfm
    bindsym t mode "default", exec thunderbird
    bindsym p mode "default", exec ~/Applications/Pianoteq_6_STAGE/amd64/Pianoteq\ 6\ STAGE
    bindsym m mode "default", exec terminal -e 'mocp'
    bindsym b mode "default", exec terminal -e 'bmenu'
    
    bindsym Escape mode "default"
}

