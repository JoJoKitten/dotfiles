
# Set mod key to Super_L
set $mod Mod4
# another mod key to change between apps
set $mod2 Mod3


# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace
bindsym $mod+Shift+r restart
# reload .Xresource
bindsym $mod+Shift+x exec "xrdb ~/.Xresources; notify-send 'reloaded .Xresources'"


# borders
