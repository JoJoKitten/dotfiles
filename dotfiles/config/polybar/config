[colors]
background_0 = #80101010
background_1 = #80101010
i3_line_color = #b08020
module_bg = #c0101010
mode_fg = #404040
mode_bg = #f0e0b0
tray_bg = #063020

[bar/top]
; Use the following command to list available outputs:
; $ xrandr -q | grep " connected" | cut -d ' ' -f1
monitor =
monitor-fallback =

bottom = false
width = 100%
height = 27p
offset-x = 0
offset-y = 0

foreground = #fff
; background = #C0000000

; Background gradient (vertical steps)
background-0 = ${colors.background_0}
background-1 = ${colors.background_1}

; Under-/overline pixel size and argb color
; Individual values can be defined using:
;   {overline,underline}-size
;   {overline,underline}-color
underline-size = 2
underline-color = #fff

; Individual side values can be defined using:
;   border-{left,top,right,bottom}-size
;   border-{left,top,right,bottom}-color
border-bottom-size = 0

font-0 = NotoSans-Regular:size=10;2
font-1 = Font Awesome 5 Brands:pixelsize=10;3
font-2 = Font Awesome 5 Free Solid:pixelsize=10;3
font-3 = Font Awesome 5 Free:pixelsize=10;3

; Modules 
modules-left = i3 xwindow  
modules-center = 
modules-right = network cpu mem filesystem pulseaudio date time 

; The separator will be inserted between the output of each module
separator = "|"

; Opacity value between 0.0 and 1.0 used on fade in/out
dim-value = 1.0


; Position of the system tray window
tray-position = right

; If true, the bar will not shift its contents when the tray changes
tray-detached = true

; Tray icon max size
tray-maxsize = 16

tray-transparent = true
tray-background = ${colors.tray_bg}

; Tray offset defined as pixel value (e.g. 35) or percentage (e.g. 50%)
tray-offset-x = 0
tray-offset-y = 0

; Pad the sides of each tray icon
tray-padding = 0

; Scale factor for tray clients
tray-scale = 1.0

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = false

; Fallback click handlers that will be called if
; there's no matching module handler found.
click-left = 
click-middle = 
click-right =
scroll-up =
scroll-down =
double-click-left =
double-click-middle =
double-click-right =


[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
pin-workspaces = true

; This will split the workspace name on ':'
strip-wsnumbers = true

; Sort the workspaces by index instead of the default
index-sort = true

; Change workspaces
enable-click = true
enable-scroll = true
wrapping-scroll = false
reverse-scroll = true

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>
; format-foreground = #fff

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 5
label-mode-foreground = ${colors.mode_fg}
label-mode-background = ${colors.mode_bg}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
label-focused = %icon%
label-focused-background = ${colors.module_bg}
label-focused-underline = ${colors.i3_line_color}
label-focused-padding = 6
; label-focused-margin = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-unfocused = %icon%
label-unfocused-foreground = #aaa
; label-unfocused-background = ${colors.module_bg}
label-unfocused-padding = 6
; label-unfocused-margin = 2

; ; Available tokens:
; ;   %name%
; ;   %icon%
; ;   %index%
; ;   %output%
; ; Default: %icon%  %name%
label-visible = %icon%
label-visible-underline = #555555
label-visible-padding = 6

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 6

; Separator in between workspaces
; label-separator = |
; label-separator-padding = 2
; label-separator-foreground = ${colors.i3_line_color}
; label-separator-foreground = #ffffff


